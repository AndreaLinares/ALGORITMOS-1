// SUMA DE N IMPARES.cpp : Defines the entry point for the console application.


#include "stdafx.h"
#include "conio.h"
#include "math.h"
#include <iostream>
using namespace std;

int main (){
	int n,s,i;
	cout<<"Ingrese n: ";
	cin>>n;
	s=0;
	for(i=1;i<=n;i++)
		if(i%2!=0)
			s=s+i;
		cout<<"La suma es: "<<s;
		getch();
		return 0;
}

//Realizar la suma de los N primeros numeros impares

int main (){
int n,s,a,b;
a = 1;
s = 0;
b = 0;
cout<<"Ingrese n; ";
cin>>n;
while(b < n){
	if(a%2!=0){
		s = s+a;
		a=a+2;
	}
	b++;
	}
cout<<"La suma es: "<<s;
getch();
return 0;
}

//Realizar la suma usando while mientras no se digite un numero negativo

int main(){
	int n,s;
	s=0;
	cout<<"Digite un numero: ";
	cin>>n;
	while(n>0){
		s=s+n;
		cout<<endl<<"La suma es: "<<s;
		cout<<endl<<endl<<"ingrese un numero: ";
		cin>>n;
	}
	cout<<endl<<"La suma es: "<<s;
	getch();
	return 0;
}
